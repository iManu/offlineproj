{{#each .}}
{{#if is-active}}
<li class="Isogrid-item{{#each craft}} craft-{{this}}{{/each}}{{#each category}} category-{{this}}{{/each}} letter-{{first_letter title}}">
  <div class="icon"><img class="img-responsive" src="{{folder}}/{{icon}}"></div>
  <div class="details">
    <strong title="{{title}}">{{title}}</strong>
    <time>{{baseline}}</time>
    <address>{{details.title}}</address>

    <figure>
      <p>big image !</p>
      <img src="{{folder}}/{{visuals.[0]}}" alt="" style="max-height:200px">
    </figure>

    {{#if comment}}
      <q>{{comment}}</q>
    {{/if}}
  </div>
</li>
{{/if}}
{{/each}}
