{{#each .}}
{{#if is-active}}
<li class="Isogrid__item js-item-selector{{#each craft}} craft-{{this}}{{/each}}{{#each category}} category-{{this}}{{/each}} {{#if partner.id}} partner-{{partner.id}}{{/if}} letter-{{first_letter title}}">
  <div class="Isogrid__header">
    <div class="Isogrid__header--left">
      <img class="Isogrid__icon--img" src="images/grey.gif" data-original="{{folder}}/{{icon}}" alt="">
    </div><!--
    --><div class="Isogrid__header--right">
      <h2 title="{{title}}" class="Isogrid__title js-sort-title">{{title}}</h2>
      <h3 class="Isogrid__subtitle">{{partner.name}}</h3>
    </div>
  </div>
  <div class="Isogrid__resume">
    <p class="Isogrid__baseline">{{baseline}}</p>

    <div class="Isogrid__footer">
      <div class="Isogrid__footer--left">
        <button class="Isogrid__btnplus">
          En savoir <span>+</span>
        </button>
      </div><!--
      --><div class="Isogrid__footer--right">
        {{#if pictos.gcn}}
          <img src="images/gcn.png" width="35" height="8" class="pictopts" alt="GCN">
        {{/if}}
        {{#if pictos.smb}}
          <img src="images/smb.png" width="35" height="8" class="pictopts" alt="SMB">
        {{/if}}
      </div>
    </div>
  </div>

  <div class="Isogrid__detail js-app-detail" style="display:none">
    <figure>
      <p>big image !</p>
      <img src="{{folder}}/{{visuals.[0]}}" alt="{{title}}" style="max-height:200px">
    </figure>

  </div>
</li>
{{/if}}
{{/each}}
