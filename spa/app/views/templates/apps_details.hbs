
<div class="Isogrid__detail js-app-detail">
  <div class="scroll-wrap">
    <div class="inside-wrap">
    	<h2 class="Wrapper__title"><span>Solutions</span><span>Métiers</span><span>Mobilité</span></h2>
    	<div id="onlineMarker2" class="Wrapper__onoff Wrapper__onoff--two">
  	   <span class="Wrapper__onoff--on js-on">Online</span>
  	   <span class="Wrapper__onoff--off js-off">Offline</span>
  	  </div>
      <div class="Wrapper__article">
      {{#each .}}
        <article class="content__item">
          <div class="article-top">
            <div class="article-pictos">
              {{#if pictos.gcn}}
                <img src="images/gcn.png" width="35" height="8" class="pictopts" alt="GCN">
              {{/if}}
              {{#if pictos.smb}}
                <img src="images/smb.png" width="35" height="8" class="pictopts" alt="SMB">
              {{/if}}
            </div>
            <div class="article-left">
              <img src="{{folder}}/{{icon}}" class="article-icon" alt="">
            </div><!--
            --><div class="article-right">
              <h2 class="article-title">{{title}}</h2>
              <p class="article-desc">{{description}}</p>
              {{#if url}}
              {{#is_online}}
              <a href="{{url}}" class="article-link js-tgt-blank" data-tag="{{lowercase title}}-telecharger">Télécharger l'application</a>
              {{/is_online}}
              {{/if}}
            </div>
          </div>
          <div class="article-carousel">
            {{#is_online}}
            <div class="app-carousel">
              {{#each visuals}}
              <div>
                <img src="{{../folder}}/{{this}}" class="carousel-img" alt="">
              </div>
              {{/each}}
            </div>
            {{/is_online}}
          </div>
        </article>
      {{/each}}
      </div>
    </div>
    <button class="close-button" data-tag="retour"><img src="images/gfx/arrow_back.png" alt="<"><span>Retour</span></button>
  </div>
</div>
