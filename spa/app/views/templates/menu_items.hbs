<div class="Nav__left">
  <div class="Nav__logo"><img src="images/logo_samsungb2b.png" alt="Samsung Business"></div>
  <ul class="Nav__filters" role="list">
    <li class="Filters" role="list-item">
      <button class="Filters__button js-craft-button" role="button">
        <span>Nos Métiers</span><span class="Filters__button--check"><img src="images/gfx/check.png" alt="check"></span>
      </button>
      <ul class="Filters__list Filters__list--crafts js-filter-list" role="list">
        {{#each filterCrafts}}
          <li class="Filters__item" role="list-item">
            <input type="checkbox" id="craft-{{this.id}}" class="Filters__input js-check-craft" data-craft="{{this.id}}" aria-checked="false">
            <label for="craft-{{this.id}}" class="Filters__label">
              <span>{{this.item}}</span><span class="Filters__label--check js-label-check"><img src="images/gfx/check.png" alt="check"></span>
            </label>
          </li>
        {{/each}}
      </ul>
    </li>
    <li class="Filters" role="list-item">
      <button class="Filters__button js-category-button" role="button">
        <span>Catégories</span><span class="Filters__button--check"><img src="images/gfx/check.png" alt=""></span>
      </button>
      <ul class="Filters__list Filters__list--category js-filter-list" role="list">
        {{#each filterCategories}}
          <li class="Filters__item" role="list-item">
            <input type="checkbox" id="category-{{this.id}}" class="Filters__input js-check-category" data-category="{{this.id}}" aria-checked="false">
            <label for="category-{{this.id}}" class="Filters__label">
              <span>{{this.item}}</span><span class="Filters__label--check js-label-check"><img src="images/gfx/check.png" alt="check"></span>
            </label>
          </li>
        {{/each}}
      </ul>
    </li>
    <li class="Filters Filters__li-search" role="list-item">
      <input type="search" placeholder="Rechercher" role="search" value="" class="Filters__search js-search">
    </li>
    <li class="Filters__li-clear" role="list-item">
      <button class="Filters__clear js-clear-filters" role="button">
        Effacer les filtres
      </button>
    </li>
  </ul>
  <footer class="Footer" role="contentinfo">
	 <ul class="Footer__liste">
    <li class="Footer__item">
      <button class="Footer_button js-legacy">Infos légales</button>
    </li>
    <li class="Footer__item">
      Tous droits réservés
    </li>
   </ul>
  </footer>
</div><!--
--><div class="Nav__right">
  <ul class="Nav__alphabet Alphabet" role="list">
    {{#each alphabet}}
    <li class="Alphabet__item" role="list-item">
      <input type="checkbox" id="alpha-{{this}}" value="{{this}}" class="Alphabet__check js-check-letter" role="checkbox" aria-checked="false">
      <label for="alpha-{{this}}" class="Alphabet__label">{{this}}</label>
    </li>
    {{/each}}
  </ul>
</div>
