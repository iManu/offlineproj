<div class="Nav__left">
  <ul class="Nav__filters" role="list">
    <li class="Filters" role="list-item">
      <button class="js-craft-button">Nos Métiers</button>
      <ul class="Filters__list Filters__list--crafts" role="list">
        {{#each filterCrafts}}
          <li class="Filters__item" role="list-item">
            <input type="checkbox" id="craft-{{this.id}}" class="Filters__input js-check-craft" data-craft="{{this.id}}">
            <label for="craft-{{this.id}}" class="Filters__label">
              {{this.item}}
            </label>
          </li>
        {{/each}}
      </ul>
    </li>
    <li class="Filters" role="list-item">
      <button class="js-category-button">Catégories</button>
      <ul class="Filters__list Filters__list--category" role="list">
        {{#each filterCategories}}
          <li class="Filters__item" role="list-item">
            <input type="checkbox" id="category-{{this.id}}" class="Filters__input js-check-category" data-category="{{this.id}}">
            <label for="category-{{this.id}}" class="Filters__label">
              {{this.item}}
            </label>
          </li>
        {{/each}}
      </ul>
    </li>
    <li role="list-item">
      <input type="search" placeholder="Rechercher" role="search" class="js-search">
    </li>
  </ul>
</div><!--
--><div class="Nav__right">
  <ul class="Nav__alphabet Alphabet" role="list">
    {{#each alphabet}}
    <li class="Alphabet__item" role="list-item">
      <input type="checkbox" id="alpha-{{this}}" value="{{this}}" class="Alphabet__check js-check-letter" role="checkbox" aria-checked="false">
      <label for="alpha-{{this}}" class="Alphabet__label">{{this}}</label>
    </li>
    {{/each}}
  </ul>
</div>
